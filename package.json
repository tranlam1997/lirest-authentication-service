{
  "name": "lirest-iam",
  "version": "0.1.0",
  "description": "Identity and access management for Lirest app",
  "main": "src/main.ts",
  "engines": {
    "node": ">= 16.x",
    "pnpm": ">= 7.x"
  },
  "scripts": {
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "debug": "node --inspect -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "debug:prod": "node --inspect dist/main.js",
    "debug:watch": "nodemon --exec node --inspect -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --forceExit --detectOpenHandles --runInBand",
    "prepare": "husky install && husky add .husky/pre-commit \"lint-staged\"",
    "prebuild": "rimraf dist",
    "build": "tsc -b ./tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node --trace-warnings -r ts-node/register -r tsconfig-paths/register .",
    "start:prod": "node dist/main.js",
    "start:dev": "tsnd --respawn --clear --transpile-only -r tsconfig-paths/register . --ignore-watch \"src/**/*.spec.ts\" node_modules"
  },
  "keywords": [],
  "author": "Tran Tuan Lam",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cls-hooked": "^4.3.3",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/request-ip": "^0.0.37",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@tranlam1997/lirest-event-pub-sub": "^0.1.17",
    "@tranlam1997/lirest-internal-communication-service": "0.2.12",
    "bcryptjs": "^2.4.3",
    "cls-hooked": "^4.2.2",
    "config": "^3.3.8",
    "cross-var": "^1.1.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "lightship": "^7.1.1",
    "mongoose": "^6.8.4",
    "mongoose-paginate-v2": "^1.7.1",
    "openapi-types": "^12.1.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^6.2.7",
    "swagger-ui-express": "^4.6.0",
    "tsconfig-paths": "^4.1.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-transport": "^4.5.0"
  }
}
